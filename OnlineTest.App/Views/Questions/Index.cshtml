@model IEnumerable<OnlineTest.App.Models.QuestionListDto>

@{
    ViewData["Title"] = "Guestions";
}


<h3 class="text-center">Questions</h3>
<p>
    <a asp-action="Create" class="btn btn-primary">New Question</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionPoint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionPoint)
            </td>
            <td>
                <a asp-controller="Answers" asp-action="Index" asp-route-qid="@item.Id" class="btn btn-outline-success">Add or Edit Answers</a> 
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
