@model OnlineTest.App.Models.AnswerDto

@{
    ViewData["Title"] = "Create";
}

<h1>New Answer</h1>
<br />
<hr />
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-qid="@ViewBag.QuestionId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnswerText" class="control-label"></label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCorrect" class="control-label"></label>
                <input type="checkbox"  asp-for="IsCorrect" class="" />
                <span asp-validation-for="IsCorrect" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<hr />
<br />
<div>
    <a asp-action="Index" class="btn btn-outline-dark" asp-route-qid="@ViewBag.QuestionId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
