@model OnlineTest.App.Models.AnswerDto

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Answer</h1>
<br />
<hr />
<br />
<div class="row ">
    <div class="col-md-4 ">
        <form asp-action="Edit" asp-route-qid="@ViewBag.QuestionId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnswerText" class="control-label"></label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCorrect" class="control-label"></label>
                @*<input type="checkbox" asp-for="IsCorrect" class="" />*@
                @Html.CheckBoxFor(m=>m.IsCorrect)
             
                <span asp-validation-for="IsCorrect" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="QuestionId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<hr />
<br />
<div>
    <a asp-action="Index" asp-route-qid="@ViewBag.QuestionId" class="btn btn-outline-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
